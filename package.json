{
  "name": "typed-query-filter",
  "version": "1.0.6",
  "description": "Type-safe query filter engine for array of objects (MongoDB-like syntax)",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest",
    "test:ci": "vitest run --reporter=default",
    "playground": "nodemon -L --watch playground --watch src --ext ts,json --delay 0.5 --verbose --exec 'ts-node -P tsconfig.playground.json playground/index.ts'",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky"
    
  },
  "keywords": [
    "query",
    "filter",
    "typescript",
    "mongo",
    "builder"
  ],
  "author": "DinhPlus (https://github.com/dinhplus)",
  "repository": {
    "type": "github",
    "url": "https://github.com/dinhplus/typed-query-filter",
    "directory": "src",
    "branch": "master",
    "files": [
      "src",
      "dist",
      "README.md",
      "LICENSE",
      "CHANGELOG.md"
    ]
  },
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  }
}
